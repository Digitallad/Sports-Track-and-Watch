# Rugby Atlas - Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/rugby_atlas

# Application Settings
APP_NAME=Rugby Atlas API
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/rugby_atlas.log

# API Configuration
API_PREFIX=/api/v1

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string

# External API Keys (add as needed)
# WORLD_RUGBY_API_KEY=your-api-key-here
# SIX_NATIONS_API_KEY=your-api-key-here
